<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<database engine="MySQL">
		<host>localhost</host>
		<username>izzy</username>
		<password>******</password>
		<dbname>izzy_php</dbname>
	</database>
	
	<telegram>
		<token>******</token>
		<chat_id>******</chat_id>
	</telegram>

	<web>
		<password>******</password>
	</web>
	
	<optimizer>
		<interval_hours>4</interval_hours>
		<min_backtest_days>100</min_backtest_days>
		<ticks_per_candle>10</ticks_per_candle>
		<optimizable_params>
			<param name="StopLossPercent"/>
			<param name="TakeProfitPercent"/>
			<param name="EMAFilterPeriod"/>
			<param name="MACDFastPeriod"/>
			<param name="MACDSlowPeriod"/>
			<param name="MACDSignalPeriod"/>
			<param name="ADXPeriod"/>
			<param name="ADXThreshold"/>
			<param name="CooldownCandles"/>
			<param name="BBPeriod"/>
			<param name="BBMultiplier"/>
			<param name="BBSlopePeriod"/>
			<param name="BBSlopeMax"/>
			<param name="BreakevenLockTriggerPercent"/>
			<param name="BreakevenLockClosePercent"/>
		</optimizable_params>
	</optimizer>

	<exchanges>
		<exchange name="Bybit" key="******" secret="******" enabled="yes" demo="yes" max-positions="3">
			<spot>
				<pair ticker="SOL/USDT" timeframe="4h" trade="no" notify="yes">
					<strategy name="EZMoonblowDCAWithShorts" backtest_days="365" backtest_initial_balance="10000" backtest_ticks_per_candle="16">
						<!-- Long -->
						<param name="NumberOfLevels" value="6"/>
						<param name="InitialEntryVolume" value="140"/>
						<param name="PriceDeviation" value="10%"/>
						<param name="VolumeMultiplier" value="1.45"/>
						<param name="PriceDeviationMultiplier" value="1.7"/>
						<param name="ExpectedProfit" value="5%"/>
						<!-- Two-Way Mode -->
						<param name="TwoWayMode" value="true"/>
						<!-- Short -->
						<param name="NumberOfLevelsShort" value="6" />
						<param name="InitialEntryVolumeShort" value="40" />
						<param name="PriceDeviationShort" value="10%" />
						<param name="VolumeMultiplierShort" value="2" />
						<param name="PriceDeviationMultiplierShort" value="2" />
						<param name="ExpectedProfitShort" value="2%" />
						<!-- Common DCA settings -->
						<param name="UseLimitOrders" value="yes"/>
						<param name="OffsetMode" value="FROM_PREVIOUS"/>
						<param name="AlwaysMarketEntry" value="yes"/>
						<!-- RSI -->
						<param name="RSIPeriod" value="14"/>
						<param name="RSIOverbought" value="70"/>
						<param name="RSIOversold" value="30"/>
					</strategy>
				</pair>
			</spot>
			<futures>
				<pair ticker="SOL/USDT" timeframe="15m" trade="no" leverage="5" />
				<pair ticker="XRP/USDT" timeframe="1h" trade="no" leverage="10">
					<strategy name="EZMoonblowSE" backtest_days="365" backtest_initial_balance="10000">
						<param name="EntryVolume" value="5%"/>
						<param name="StopLossPercent" value="2%"/>
						<param name="TakeProfitPercent" value="3%"/>
						<param name="UseIsolatedMargin" value="yes"/>
						<param name="BreakevenLockEnabled" value="yes"/>
						<param name="BreakevenLockTriggerPercent" value="50"/>
						<param name="BreakevenLockClosePercent" value="50"/>
						<param name="EMAFastPeriod" value="50"/>
						<param name="EMASlowPeriod" value="200"/>
						<param name="RSIOversold" value="30"/>
						<param name="RSIOverbought" value="70"/>
					</strategy>
				</pair>
			</futures>
		</exchange>
		<exchange name="Gate" key="..." secret="..." enabled="no" demo="yes">
			<spot>
				<pair ticker="BTC/USDT" timeframe="15m" trade="no" />
			</spot>
			<futures>
				<!-- Your Gate.io futures pairs here -->
